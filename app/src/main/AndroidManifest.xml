<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.madgenius">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_lab"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_lab_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ScoreChart"
            android:parentActivityName=".Scoreboard"/>
        <activity android:name=".GameplayAgility"
            android:parentActivityName=".Menu"
            android:screenOrientation="portrait"/>
        <activity android:name=".GameplayMemory"
            android:parentActivityName=".Menu"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Scoreboard"
            android:parentActivityName=".Menu" />
        <activity android:name=".Menu"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>